extends layout

block scripts
    script(src="https://cdn.jsdelivr.net/npm/p5@1.0.0/lib/p5.js")
    script(src="/socket.io/socket.io.js")
    script(src="sketch.js")
    script. 
        var players = [];
        var nickname = '#{nickname}' || prompt('Please enter your nickname') || '#{defaultNickname}';
        var socket = io();
        socket.emit('join', '#{room}', nickname);
        socket.on('lobby', (data) => {players = data;});